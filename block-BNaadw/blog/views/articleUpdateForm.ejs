<%- include('partials/header') -%>
<main>
  <section class="text-center form">
    <h1 class="blue">blog app <br> update article</h1>
    <form action="/articles/<%= article.slug %>" method="post">
        <fieldset>
            <input class="form-control" type="text" value="<%= article.title %>" name="title" id="" placeholder="Enter title">
            <input class="form-control" type="text" value="<%= article.description %>" name="description" id="" placeholder="Enter description">
            <input class="form-control" type="text" value="<%= article.author %>" name="author" id="" placeholder="Enter author">
            <input class="form-control" type="submit" value="Update Article">
        </fieldset>
    </form>
  </section>
</main>
<%- include('partials/footer') -%>