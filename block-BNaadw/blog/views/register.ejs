<%- include('partials/header') -%>
<main>
  <section class="text-center register form">
    <h1 class="blue">blog app <br> register user</h1>
    <form action="/users/register" method="post">
        <fieldset>
            <% if(error){ %>
                <p class="red"><%= error %></p>
            <% }%>
            <input class="form-control" type="text" name="firstName" id="" placeholder="Enter FirstName">
            <input class="form-control" type="text" name="lastName" id="" placeholder="Enter LastName">
            <input class="form-control" type="email" name="email" id="" placeholder="Enter Email">
            <input class="form-control" type="password" name="password" id="" placeholder="Enter Password">
            <input class="form-control" type="text" name="city" id="" placeholder="Enter City">
            <input class="form-control" type="submit" value="Register user">
        </fieldset>
    </form>
  </section>
</main>
<%- include('partials/footer') -%>