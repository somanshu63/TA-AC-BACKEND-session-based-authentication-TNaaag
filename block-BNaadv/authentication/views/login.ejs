<%- include('partials/header') -%>
<main>
    <div class="login">
        <h1 class="text-center red">login</h1>
        <form action="/users/login" method="post">
            <fieldset>
                <% if(error){ %>
                    <p class="red"><%= error %></p>
                <% } %>
                <% if(success){ %>
                    <p class="green"><%= success %></p>
                <% } %>
                <input class="form-control" type="email" name="email" id="" placeholder="enter email">
                <input class="form-control" type="password" name="password" id="" placeholder="enter password">
                <input class="form-control" type="submit" value="login">
            </fieldset>
        </form>
    </div>
</main>

<%- include('partials/footer') -%>